<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/process_item_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary" />

        <org.kman.clearview.view.CheckableTextView
            android:id="@+id/process_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/process_item_user"
            android:singleLine="true"
            android:textColor="@color/process_list_select_item_name"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/process_item_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:gravity="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary" />

        <TextView
            android:id="@+id/process_item_io"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary" />

        <TextView
            android:id="@+id/process_item_cpu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary" />

        <TextView
            android:id="@+id/process_item_memory"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="2"
            android:gravity="end"
            android:singleLine="true"
            android:textAppearance="?android:attr/textAppearanceListItemSecondary" />
    </LinearLayout>

</LinearLayout>