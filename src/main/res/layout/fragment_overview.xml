<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <org.kman.clearview.chart.TimeChartView
            android:id="@+id/time_chart_overview_cpu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <org.kman.clearview.chart.TimeChartView
            android:id="@+id/time_chart_overview_load"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <org.kman.clearview.chart.TimeChartView
            android:id="@+id/time_chart_overview_mem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <org.kman.clearview.chart.TimeChartView
            android:id="@+id/time_chart_overview_net"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

        <org.kman.clearview.chart.TimeChartView
            android:id="@+id/time_chart_overview_disk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>